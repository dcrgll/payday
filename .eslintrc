{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "next"],
  "plugins": ["react", "testing-library", "prettier"],
  "rules": {
    "react/prop-types": "warn",
    "no-unused-vars": "warn",
    "no-console": "warn"
  },
  "overrides": [
    {
      "files": ["tests/**/*.test.js"],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}
